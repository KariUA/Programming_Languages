conectado(i,a,50).
conectado(i,b,20).
conectado(a,b,15).
conectado(a,c,25).
conectado(b,f,35).
conectado(b,c,40).
conectado(c,f,5).

%************************************* Funcion que encuentra la ruta con la distancia menor para ir de un punto a otro.Se retorna ruta y la distancia.*********************************

ruta(X,Y,Distancia):- conectado(X,Y,Distancia).
ruta(X,Y,Distancia):- conectado(X,Z,Distancia1), ruta(Z,Y,Distancia2), Distancia is Distancia1 + Distancia2.

rutaMinima(X, Y, Distancia, Ruta) :-
    findall((D, R), (ruta(X, Y, D), findall(Nodo, ruta(X, Y, _), NodoLista), append([X|NodoLista], [Y], R)), Lista),
    min_member((Distancia, Ruta), Lista).
